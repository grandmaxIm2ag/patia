package main;

import lejos.hardware.Button;
import lejos.hardware.ev3.LocalEV3;
import lejos.hardware.lcd.GraphicsLCD;
import lejos.robotics.Color;
import sensor.ColorSensor;

public class TestColorSensor {
	
	public static void main(String[] args){
		ColorSensor color = new ColorSensor();
		GraphicsLCD screen = LocalEV3.get().getGraphicsLCD();
		
		screen.drawText("Calibration", 
				"Préparez le robot à la ","calibration des couleurs",
				"Appuyez sur le bouton central ","pour continuer");
		if(true){
			
			color.lightOn();
			
			Button.waitForAnyPress();
			//calibration gris
			screen.drawString("Gris", 2, 20, 0);
			color.calibrateColor(Color.GRAY);
		
			
			color.lightOff();
		}
	}
}
